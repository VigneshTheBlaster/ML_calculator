<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="#86A9F156">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#86A9F156" />
            <gradient android:angle="-90" android:startColor="#345953" android:endColor="#689a92"  />
        </shape>
    </item>
    <item android:state_focused="true" android:color="#86A9F156">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#86A9F156" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  android:color="#86A9F156" >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#86A9F156" />
            <gradient android:angle="-90" android:startColor="#8dbab3" android:endColor="#86A9F156" />
        </shape>
    </item>
</selector>